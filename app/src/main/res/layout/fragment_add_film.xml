<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.AddFilmPageActivity">


    <ImageView
        android:id="@+id/filmPosterAdd"
        android:layout_width="96dp"
        android:layout_height="78dp"
        android:layout_marginStart="157dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="158dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/addPosterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Poster"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filmPosterAdd" />

    <EditText
        android:id="@+id/filmTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:hint="Film Title"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addPosterText" />
    <EditText
        android:id="@+id/filmDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/filmTitleEditText"
        android:hint="Film Description"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/filmGenreEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Film Genre"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/filmDescriptionEditText" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="SAVE FILM"
        android:background="@color/secondColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filmGenreEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>