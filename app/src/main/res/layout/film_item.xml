<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/filmPoster"
        android:layout_width="141dp"
        android:layout_height="190dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04"
        tools:srcCompat="@drawable/Interstellar" />

    <TextView
        android:id="@+id/filmTitle"
        android:text="Film Title"
        app:layout_constraintLeft_toRightOf="@id/filmPoster"
        android:layout_marginLeft="15dp"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/filmPoster"
        android:textColor="@color/buttonColor"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/filmGenreText"
        android:text="Genre: "
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/filmPoster"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/filmTitle"
        android:textColor="@color/purpleSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/filmGenre"
        android:text="Adventure"
        app:layout_constraintLeft_toRightOf="@id/filmGenreText"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/filmTitle"
        android:textColor="@color/purpleSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/createdByText"
        android:text="Created By:"
        app:layout_constraintLeft_toRightOf="@id/filmPoster"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/filmGenreText"
        android:textColor="@color/purpleSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/createdBy"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/createdByText"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/filmGenre"
        android:textColor="@color/purpleSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/filmDescriptionText"
        android:text="Description: "
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/filmPoster"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/createdByText"
        android:textColor="@color/purpleSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/filmDescription"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/filmDescriptionText"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/filmGenreText"
        android:textColor="@color/purpleSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>